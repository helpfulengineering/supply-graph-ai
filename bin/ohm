#!/usr/bin/env python3
"""
Open Hardware Manager (OHM) CLI Entry Point (Development Fallback)

This script provides a fallback entry point for the OHM command-line interface
when the package is not installed via pip. For production use, install the package
with 'pip install -e .' and use the 'ohm' command directly.

Usage:
    # Development (without installation)
    ./bin/ohm --help
    
    # Production (after pip install -e .)
    ohm --help
"""

import sys
from pathlib import Path

# Add the project root to the Python path
project_root = Path(__file__).parent.parent
sys.path.insert(0, str(project_root))

# Import and run the CLI
try:
    from src.cli.main import cli
except ImportError as e:
    print(f"Error: Could not import CLI module: {e}", file=sys.stderr)
    print("Hint: Install the package with 'pip install -e .' for proper setup", file=sys.stderr)
    sys.exit(1)

if __name__ == "__main__":
    cli()
